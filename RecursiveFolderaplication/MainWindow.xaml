        xmlns:local="clr-namespace:RecursiveFolderaplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <Button Content="Select Folder..." Margin="10" Click="SelecetFolderClick"/>
